#!/bin/sh

set -e

cd "$(dirname "$0")/.."

echo "Installing sonos-api..."

APP_PATH=`pwd`
USER_NAME=`whoami`

mkdir -p ~/Library/LaunchAgents

cp config/org.sonos-api.plist ~/Library/LaunchAgents/org.sonos-api.plist

sed -i '' -e "s#%USER%#$USER_NAME#g" ~/Library/LaunchAgents/org.sonos-api.plist
sed -i '' -e "s#%PATH%#$APP_PATH#g" ~/Library/LaunchAgents/org.sonos-api.plist

launchctl load -w -F ~/Library/LaunchAgents/org.sonos-api.plist
